<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_graph"
    app:startDestination="@id/drawer1Fragment">

    <fragment
        android:id="@+id/drawer1Fragment"
        android:name="com.example.p3navigation.Drawer1Fragment"
        android:label="fragment_drawer1"
        tools:layout="@layout/fragment_drawer1" >
        <action
            android:id="@+id/action_drawer1Fragment_to_drawer2Fragment"
            app:destination="@id/drawer2Fragment" />
    </fragment>
    <fragment
        android:id="@+id/drawer2Fragment"
        android:name="com.example.p3navigation.Drawer2Fragment"
        android:label="fragment_drawer2"
        tools:layout="@layout/fragment_drawer2" >
        <action
            android:id="@+id/action_drawer2Fragment_to_drawer3Fragment"
            app:destination="@id/drawer3Fragment" />
    </fragment>
    <fragment
        android:id="@+id/drawer3Fragment"
        android:name="com.example.p3navigation.Drawer3Fragment"
        android:label="fragment_drawer3"
        tools:layout="@layout/fragment_drawer3" />
</navigation>